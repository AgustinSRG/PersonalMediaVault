{
    "name": "pmv-frontend",
    "type": "module",
    "version": "5.1.0",
    "private": true,
    "scripts": {
        "serve": "vite",
        "dev": "vite",
        "start": "vite",
        "build": "vite build",
        "lint": "eslint --fix && prettier --write .",
        "prettier": "prettier --write .",
        "test": "vue-tsc --noEmit && eslint && prettier --check .",
        "update-locales": "npm run update-translations",
        "update-translations": "node scripts/translate-file-maker.cjs",
        "apply-missing-translations": "node scripts/apply-missing-translations.cjs",
        "update-fa-subset": "node scripts/create-fa-subset.cjs",
        "visualize-bundle": "vite-bundle-visualizer -o bundle-size-stats.html --sourcemap"
    },
    "dependencies": {
        "@asanrom/request-browser": "1.0.5",
        "vue": "3.5.22"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "6.0.1",
        "@vue/tsconfig": "0.7.0",
        "eslint": "9.31.0",
        "eslint-config-prettier": "10.1.1",
        "eslint-plugin-vue": "10.0.0",
        "globals": "16.0.0",
        "prettier": "3.2.5",
        "typescript": "5.7.2",
        "typescript-eslint": "8.26.1",
        "vite": "7.2.0",
        "vite-plugin-pwa": "1.0.3",
        "vue-tsc": "2.2.4"
    },
    "optionalDependencies": {
        "fonteditor-core": "2.3.2",
        "ttf2woff2": "8.0.0",
        "vite-bundle-visualizer": "1.2.1"
    }
}
